.message-text {

  display flex;

  &.left {
  }

  &.right {
    flex-direction row-reverse;
  }

  p {
    &.left {
      background-color: #435f7a;
      color: white;
    }

    &.right {
      background-color: #f5f5f5;
      color: #32465a;
    }

    border-radius 20px;
    padding 10px 15px;

    max-width 60%;
    word-wrap break-word;
  }

  .person-info {
    display flex;
    flex-direction column;
    align-items center;

    .name {
      display block;
    }

    img {
      display block;
      height: 25px;
      width @height;
      border-radius 50%;
    }
  }
}